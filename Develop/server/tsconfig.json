{
  "compilerOptions": {
    "target": "es2017",            // Must be at least ES2017 for top-level await support
    "module": "esnext",            // Supports import.meta, import assertions, and top-level await
    "moduleResolution": "node",    // Standard node resolution
    "resolveJsonModule": true,     // Allows importing JSON files
    "esModuleInterop": true,       // Ensures compatibility for common imports
    "outDir": "dist",              // Output directory for compiled files
    "rootDir": "src",              // Adjust as needed: where your source files reside
    "strict": true,                // (Optional) Enable strict type-checking options
    "skipLibCheck": true           // (Optional) Skip type checking for declaration files
  },
  "include": [
    "src/**/*",                  // Include all files in the src folder
    "seeds/**/*"                 // Include your seeds files (if these are meant to be compiled)
  ],
  "exclude": [
    "node_modules",
    "dist"                        // Exclude the output directory
  ]
}